{% macro header(place) %}
  {% set cssClasses = place['type'] | unboxArray | getHeaderCssClasses(shapes) %}

  <div class="header {{ cssClasses }}">
    <h1 class="header-title">
      {{ jsonld.renderLiteralAsString(place | displayLabel(context) | unboxArray ) }}
    </h1>

    {% if place and place.id %}
      {% set fullUri = place.id | expandUri(context) %}
      <div class="header-uri d-flex align-items-center gap-2 position-relative">
        <code>
          <a class="copy-link" href="{{ fullUri }}">{{ fullUri }}</a>
        </code>
        
        {% set suffix = fullUri.split('FRAN_RI_') | last %}
        {% if suffix %}
          <button class="border-0 copy-icon-btn" data-copy="{{ suffix }}">
            <i class="fas fa-copy"></i>
          </button>
        {% endif %}
        
      </div>
    {% endif %}
    

</div>
{% endmacro %}
