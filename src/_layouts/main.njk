<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewpoint" content="width=device-witdth">
        <title>{{ 'garance' | i18n }}</title>

        <!-- bootstrap -->
        <link href=" https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/journal/bootstrap.min.css " rel="stylesheet">     
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        
        <!-- anchors -->
        <script src="https://cdn.jsdelivr.net/npm/anchor-js/anchor.min.js"></script>
        <!-- d3js -->
        <script src="https://cdn.jsdelivr.net/npm/d3@7"></script>

        <!-- fontawesome -->
        <link href="/assets/fa/css/all.min.css" rel="stylesheet"/>
        
        <!-- css -->
        <style type="text/css">
            .navbar-nav li:hover > ul.dropdown-menu {
                display: block;
            }
            .dropdown-submenu {
                position:relative;
            }
            .dropdown-submenu > .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top:-6px;
            }

            /* rotate caret on hover */
            .dropdown-menu > li > a:hover:after {
                text-decoration: underline;
                transform: rotate(-90deg);
            }

            /* title */
            .h1 > title-Header {
                display: contents;
            }

            /** Diagram ***/
            .link {
                fill: none;
                stroke: #555;
                stroke-opacity: 0.2;
                stroke-width: 2px;
            }
            svg {
                border: none;
            }

            /* fil d'ariane */
            .container .breadcrumb {
                border: none;
                border-radius: 0;
                /*border-bottom: 1px solid #ccc;*/
            }

            .breadcrumb ul {
                display: flex;
                flex-wrap: wrap;
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .breadcrumb li:not(:last-child)::after {
                display: inline-block;
                margin: 0 0.25rem;
                content: " > ";
            }

            /* so that the main body content is not hidden by the navbar */
            body {
                padding-top: 80px;
            }

            /* so that the anchor is not hidden by the navbar when deep-linking */
            html {
                scroll-padding-top: 60px;
            }

            /* background of navbar */
            .bg-performing-arts {
                background-color: #083658;
            }

            /* concepts number */
            .numConcepts {
                font-size: small;
                font-style: italic;
            }

            /* so that URI sticks to the title */
            .ConceptScheme-title {
                margin-bottom:-0.06em;
            }

            /* so that URI sticks to the title */
            .concept-title {
                margin-bottom:-0.2em;
            }

            /* make the URI smaller */
            .concept-URI {
                font-size:85%;
            }

            /* so that autocompletions mark text stay black even though we use a dark theme */
            mark {
                color: rgb(34, 34, 34);
            }

            /* TimeLine */
            @import url('https://fonts.googleapis.com/css?family=Lato:300,400,700,900');

            * {
                pading: 0;
                margin: 0;
                //font-family: "Lato", sans-serif;
                position: relative;
            }

            .timeline {
                padding: 10px 0px;
                width: 80%;
                margin-left: 3%;
                margin-bottom: 10px;
            }

            /*
            .timeline:before {
                content: "";
                position: absolute;
                top: 40px;
                left: 35px;
                width: 3px;
                height: calc(100% - 80px);
                background: #c0392b;
            }
            */

            .timeline .column {
                margin: 40px 40px 40px 10px;
            }

            .timeline .column .title h1 {
                font-size: 30px;
                color: rgba(0,0,0,0.1);
                font-family: serif;
                letter-spacing: 3px;
            }

            /*
            .timeline .column .title h1:before {
                content: "";
                position: absolute;
                left: -62px;
                top: 86px;
                width: 10xÂ²px;
                height: 10px;
                background: #fff;
                border: 3px solid #c0392b;
            }
            */

            .timeline .column .description p {
                font-size: 15px;
                line-height: 20px;
                margin-left: 20px;
                margin-top: 10px;
                font-family: serif;
            }

            .timeline .column .description {
                border-left: 1px solid #000;
            }

            .main {
                width: 80%;
                margin-left: 10%;
                margin-top: 80px;
            }

            .main h1 {
                font-size: 80px;
                line-height: 60px;
            }

            .main p {
                font-size: 13px;
                line-height: 20px;
                font-family: serif;
                text-align: right;
            }

            /* End Timeline css */

            .footer {
                font-size: 0.8em;
                font-style: italic;
                color: #B0B0B0;
                text-align: center;
            }
            
        </style>
    </head>
    <body>
        <!-- Navbar menu -->
        <nav class="navbar navbar-expand-lg fixed-top bg-performing-arts" data-bs-theme="dark"> 
            <div class="container">
                <a class="navbar-brand" href="/{{ locale }}">{{ 'garance' | i18n }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavMenu" aria-controls="navbarNavMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_1" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">TEST<a>
                        </li>   
                    </ul>
                <div>
                <div class="menu-menu-principal-container">
                    {% set pageUrl = page.url.split('/').slice(2).join('/') %}
                    {% if locales.length %}                        
                        {% for locale in locales -%}
                            <a href="../{{ locale.code }}/{{ pageUrl }}" rel="alternate" hreflang="{{ locale.code }}">{{ locale.label }}</a>
                        {% endfor -%}                        
                    {% endif %}                    
                </div>
            </div>
        </nav>

        <div class="container">
            <section id = "contenu">
                {{ content | safe }}
            </section>
        </div>
    <hr>
        
        
    </body>
    <!-- footer --> 
    <footer class="footer">
        {{ 'last updated on' | i18n }} {{ helpers.currentDate() }}
        <br />
        <br />
    </footer>
</html>
