<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewpoint" content="width=device-witdth">
        <title>{{ 'garance' | i18n }}</title>

        <!-- bootstrap -->
        <link href=" https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/journal/bootstrap.min.css " rel="stylesheet">     

        <!-- fontawesome -->
        <link href="{{ '/assets/fa/css/all.min.css' | relative(page) }}" rel="stylesheet"/>        
        
        <!-- css -->
        <link rel='stylesheet' href="{{ '/assets/css/garance.css' | relative(page) }}" type='text/css' />
        <link rel='stylesheet' href="{{ '/assets/css/timeline.css' | relative(page) }}" type='text/css' />
        
    </head>
    <body>
        <!-- Navbar menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top"> 
            <div class="container">
                <a href="https://www.archives-nationales.culture.gouv.fr/"><img src="{{ '/assets/images/archives-nationales.png' | relative(page) }} " style="width:200px;" /></a>
                &nbsp;
                &nbsp;
                <a class="navbar-brand" href="{{ ['/', locale] | join | relative(page) }}">{{ 'garance' | i18n }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavMenu" aria-controls="navbarNavMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Vocabularies -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_1" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'vocabularies' | i18n }}<a>
                            {% if index.graph %}
                                {% set sortVocabularies = index.graph | jsonSort("title") %}
                                <ul class="dropdown-menu">  
                                {% for voc in sortVocabularies %}
                                    <li><a class="dropdown-item" href="{{ ['/', locale, '/vocabularies/', voc.id | localName ] | join | relative(page) }}">{{ voc.title | lang("fr") }}</a></li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                        <!-- Agents -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'agents' | i18n }}<a>
                        </li>
                        <!-- Lieux -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'lieux' | i18n }}<a>
                        </li>

                    </ul>
                <div>
                <div class="menu-menu-principal-container">
                    {% if locale === "fr" %}
                        {% set pageURLEN = page.url | replace("/fr/", "/en/") %}
                        <span>
                            <a href="{{ pageURLEN | relative(page) }}" ><img src="{{ '/assets/images/EN.png' | relative(page) }}" alt =""/></a>
                        </span>                        
                    {% endif %}

                    {% if locale === "en" %}
                        {% set pageURLFR = page.url | replace("/en/", "/fr/") %}
                        <span>
                            <a href="{{ pageURLFR | relative(page) }}" ><img src="{{ '/assets/images/FR.png' | relative(page) }}" alt =""/></a>
                        </span>                        
                    {% endif %}
                </div>
            </div>
        </nav>
        <!-- show all contents -->
        <div class="container">
            <section id = "contenu">
                {{ content | safe }}
            </section>
        </div>
        <hr>
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fa-solid fa-chevron-up"></i></a>
        <!-- footer --> 
        <footer class="footer">
            {{ 'last updated on' | i18n }} {{ helpers.currentDate() }}
            <br />
            <br />
        </footer>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        
        <!-- anchors -->
        <script src="https://cdn.jsdelivr.net/npm/anchor-js/anchor.min.js"></script>
        <!-- d3js -->
        <script src="https://cdn.jsdelivr.net/npm/d3@7"></script>
        <script src="{{ '/assets/js/garance.js' | relative(page) }}"></script>

          <script>
            // generate anchors on each h5 title
            anchors.options.placement = 'left';
            anchors.options.icon = '#';
            anchors.add('h5');
          </script>
    </body>


    
</html>
