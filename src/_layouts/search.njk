<main class="section_garance">
    <div class="row">
        <link href="{{ '/pagefind/pagefind-ui.css' | relative(page) }}" rel="stylesheet">
        <script src="{{ '/pagefind/pagefind-ui.js' | relative(page) }}"></script>
        <div id="search"></div>
        <script>
            window.addEventListener('DOMContentLoaded', (event) => {
                new PagefindUI({ 
                	element: "#search",
                	showSubResults: true,
                	showImages: false,
                	pageSize: 10,
                	autofocus: true,
                    showEmptyFilters: false,
                    ranking: {
                            termSimilarity: 8.0,
                            pageLength: 0.0
                    }
                });
            });
        </script>
    </div>
</main>