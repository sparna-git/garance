<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewpoint" content="width=device-witdth">
        <title>{{ 'garance' | i18n }}</title>

        <!-- bootstrap -->
        <link href=" https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/journal/bootstrap.min.css " rel="stylesheet">     
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        
        <!-- anchors -->
        <script src="https://cdn.jsdelivr.net/npm/anchor-js/anchor.min.js"></script>
        <!-- d3js -->
        <script src="https://cdn.jsdelivr.net/npm/d3@7"></script>

        <!-- fontawesome -->
        <link href="/assets/fa/css/all.min.css" rel="stylesheet"/>
        
        <!-- css -->
        <link rel='stylesheet' href="/assets/css/timeline.css" type='text/css' />
        <style type="text/css">
            .navbar-nav li:hover > ul.dropdown-menu {
                display: block;
            }
            .dropdown-submenu {
                position:relative;
            }
            .dropdown-submenu > .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top:-6px;
            }

            /* rotate caret on hover */
            .dropdown-menu > li > a:hover:after {
                text-decoration: underline;
                transform: rotate(-90deg);
            }

            /* title */
            .h1 > title-Header {
                display: contents;
            }

            /** Diagram ***/
            .link {
                fill: none;
                stroke: #555;
                stroke-opacity: 0.2;
                stroke-width: 2px;
            }
            svg {
                border: none;
            }

            /* fil d'ariane */
            .container .breadcrumb {
                border: none;
                border-radius: 0;
                /*border-bottom: 1px solid #ccc;*/
            }

            .breadcrumb ul {
                display: flex;
                flex-wrap: wrap;
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .breadcrumb li:not(:last-child)::after {
                display: inline-block;
                margin: 0 0.25rem;
                content: " > ";
            }

            /* so that the main body content is not hidden by the navbar */
            body {
                padding-top: 80px;
            }

            /* so that the anchor is not hidden by the navbar when deep-linking */
            html {
                scroll-padding-top: 60px;
            }

            /* background of navbar */
            .bg-performing-arts {
                background-color: #083658;
            }

            /* concepts number */
            .numConcepts {
                font-size: small;
                font-style: italic;
            }

            /* so that URI sticks to the title */
            .ConceptScheme-title {
                margin-bottom:-0.06em;
            }

            /* so that URI sticks to the title */
            .concept-title {
                margin-bottom:-0.2em;
            }

            /* make the URI smaller */
            .concept-URI {
                font-size:85%;
            }

            /* so that autocompletions mark text stay black even though we use a dark theme */
            mark {
                color: rgb(34, 34, 34);
            }

            .footer {
                font-size: 0.8em;
                font-style: italic;
                color: #B0B0B0;
                text-align: center;
            }

            .section_garance {
                margin-top: 50px;
                margin-bottom: 60px;                
            }

            .section_body {
                margin-top: 50px;
                margin-bottom: 60px;                
            }

            .section_garance ul {
                margin-top: 50px;
                margin-bottom: 60px;
            }

            .botton_marging {
                margin-bottom: 30px;
            }        
        </style>
    </head>
    <body>
        <!-- Navbar menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top"> 
            <div class="container">
                <a class="navbar-brand" href="{{ locale }}">{{ 'garance' | i18n }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavMenu" aria-controls="navbarNavMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Vocabularies -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_1" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'vocabularies' | i18n }}<a>
                            {% if index.graph %}
                                {% set sortVocabularies = index.graph | jsonSort("title") %}
                                <ul class="dropdown-menu">  
                                {% for voc in sortVocabularies %}
                                    <li><a class="dropdown-item" href="{{ voc.id | localName }} | relative(page)">{{ voc.title | lang("fr") }}</a></li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                        <!-- Agents -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'agents' | i18n }}<a>
                        </li>
                        <!-- Lieux -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="DropdownMenuLink_3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ 'lieux' | i18n }}<a>
                        </li>
                    </ul>
                <div>
                <div class="menu-menu-principal-container">
                    {{ page.url }}
                    {% if locale === "fr" %}
                        {% set pageURLEN = page.url | replace("/fr/", "/en/") %}
                        <span>
                            <a href="./{{ pageURLEN }}" ><img src="{{ '/assets/images/'}}{{'EN.png' }}" alt =""/></a>
                        </span>                        
                    {% endif %}

                    {% if locale === "en" %}
                        {% set pageURLFR = page.url | replace("/en/", "/fr/") %}
                        <span>
                            <a href="{{ pageURLFR }}" ><img src="{{ '/assets/images/'}}{{'FR.png' }}" alt =""/></a>
                        </span>                        
                    {% endif %}
                </div>
            </div>
        </nav>
        <!-- show all contents -->
        <div class="container">
            <section id = "contenu">
                {{ content | safe }}
            </section>
        </div>
        <hr>
    </body>
    <!-- footer --> 
    <footer class="footer">
        {{ 'last updated on' | i18n }} {{ helpers.currentDate() }}
        <br />
        <br />
    </footer>
</html>


